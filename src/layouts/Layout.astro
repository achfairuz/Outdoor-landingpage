---
// src/layouts/Layout.astro
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang='id'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{title}</title>
    <link
      href='https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined'
      rel='stylesheet'
    />
  </head>
  <body class='bg-white text-gray-800'>
    <header class='text-gray-800 w-full'>
      <div
        class='head flex flex-col md:flex-row md:justify-between py-8 px-4 justify-center gap-4'
      >
        <h1 class='text-xl md:text-2xl font-bold text-center'>OutdoorXplore</h1>
        <div class='search-input justify-center flex gap-2'>
          <input
            type='text'
            class='border-2 border-gray-400 px-4 rounded-full w-44'
            placeholder='Search...'
          />
          <button
            type='button'
            class='bg-green-600 px-6 py-2 rounded-full text-white hover:shadow-2xl hover:bg-green-700 text-sm md:text-md'
            >Search</button
          >
        </div>
      </div>
      <div
        class='flex items-center justify-center bg-green-600 py-4 text-white'
      >
        <nav class='space-x-4'>
          <a href='#Dashboard' class='hover:underline'>Dashboard</a>
          <a href='#Services' class='hover:underline'>Services</a>
          <a href='#ContactUs' class='hover:underline'>Contact us</a>
        </nav>
      </div>
    </header>
    <main class='container'>
      <slot />
    </main>
    <footer class='bg-green-900 text-white text-center p-4 w-full'>
      &copy; 2025 OutdoorXplore. Semua Hak Dilindungi.
    </footer>
  </body>
</html>
